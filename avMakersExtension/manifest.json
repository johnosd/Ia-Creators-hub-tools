{
  "manifest_version": 3,
  "name": "Bloqueador AVMakers",
  "version": "1.0",
  "description": "Bloqueia páginas sensíveis do painel AVMakers.",
  "permissions": [
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "https://www.avmakers.com.br/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.avmakers.com.br/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
